<%# /puppet/modules/apache/templates/000-default.conf.erb %>
<VirtualHost *:80>
    ServerName <%= @serverName %>
    ServerAlias <%= @serverAlias %>
	
    <% @envVars.each do |variable| -%>
    <%= variable %>
    <% end -%>

    DocumentRoot <%= @documentRoot %>
    <Directory <%= @documentRoot %>>  
    <% @directoryVars.each do |variable| -%>
    <%= variable %>
    <% end -%>
	</Directory>
</VirtualHost>